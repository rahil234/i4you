{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "reflect-metadata"
    ],
    "lib": [
      "ES2020",
      "dom"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ]
}
